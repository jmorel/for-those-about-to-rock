{% block nav %}
    {{ nav('rocking_chair:index-by-name') | safe }}
{% endblock %}

{% block content %}
    {% for letter, rocking_chairs in alphabet.items() %}

        <a href="{{ url('rocking_chair:index-by-name') }}#{{ letter }}"
                class="index-entry-title {% if not rocking_chairs %}empty{% endif %}"
                id="{{ letter }}">
            {{ letter }}
        </a>


        {% if rocking_chairs %}
            <div class="index-entry-list">
                {% for rocking_chair in rocking_chairs %}
                    {% if loop.index % 2 %}
                        <div class="clear"></div>
                    {% endif %}
                    <div class="item item-{% if loop.index % 2 %}left{% else %}right{% endif %}">
                        <div class="item-picture">
                            <img src="{{ rocking_chair.pictures.first().picture | thumbnail_url('50x50') }}"
                                 alt="{{ rocking_chair.name }}"/>
                        </div>
                        <div class="item-text">
                            <a href="{{ url('rocking_chair:show', slug=rocking_chair.slug) }}">
                                {{ rocking_chair.title }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="clear"></div>

    {% endfor %}
{% endblock %}
