{% from 'ftatr/single_macros.html.jinja2' import include_links %}

<div class="clear"></div>
<article class="rocking-chair" id="{{ rocking_chair.slug }}">
    <div class="pictures">
    {% set multiple_pictures = (rocking_chair.pictures.all()|length > 1) %}
    {% set carousel_id = 'carousel-' ~ rocking_chair.slug %}
        <div id="{{ carousel_id }}" class="carousel slide">
        {% if multiple_pictures %}
            <ol class="carousel-indicators">
                {% for i in range(rocking_chair.pictures.all() | length) %}
                    <li data-target="#{{ carousel_id }}"
                        data-slide-to="{{ i }}"
                        class="{% if loop.first %}active{% endif %}"></li>
                {% endfor %}
            </ol>
            {% endif %}

            <div class="carousel-inner">
                {% for picture in rocking_chair.pictures.all() %}
                    <div class="item {% if loop.first %}active{% endif %}">
                        <img src="{{ picture.picture | thumbnail_url('540x540') }}" alt="{{ rocking_chair.name }}"/>
                    </div>
                {% endfor %}
            </div>

            {% if multiple_pictures %}
            <a class="left carousel-control" href="#{{ carousel_id }}" role="button" data-slide="prev">
                <i class="fa fa-chevron-left"></i>
            </a>
            <a class="right carousel-control" href="#{{ carousel_id }}" role="button" data-slide="next">
                <i class="fa fa-chevron-right"></i>
            </a>
            {% endif %}
        </div>
    </div>

    <ul class="attributes attributes-left">
        <li>
            <div class="rocking-chair-name">
                <a href="{{ url('rocking-chair-show', slug=rocking_chair.slug) }}#{{ rocking_chair.slug }}">
                    {{ rocking_chair.name }}
                </a>
            </div>
        </li>
        <li>
            <div class="attribute">
                <div class="attribute-value">
                    <a href="https://twitter.com/intent/tweet?url={{ request.build_absolute_uri(url('rocking-chair-show', slug=rocking_chair.slug)) | urlencode }}&via=jmorel_fr&text={{ rocking_chair.twitter_text }}">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="https://www.facebook.com/dialog/share?href={{ request.build_absolute_uri(url('rocking-chair-show', slug=rocking_chair.slug)) | urlencode }}&app_id={{ FACEBOOK_APP_ID }}&redirect_uri={{ request.build_absolute_uri(request.get_full_path()) | urlencode }}#{{ rocking_chair.slug }}&display=popup">
                        <i class="fa fa-facebook"></i>
                    </a>
                </div>
                <div class="attribute-name">
                    Share on
                </div>

            </div>
        </li>
        {% if rocking_chair.year %}
            <li>
                {{ include_links(rocking_chair.year_links.all(), reverse=True) }}
                <div class="attribute">
                    <div class="attribute-value">
                        {{ rocking_chair.year }}
                    </div>
                    <div class="attribute-name">
                        Year
                    </div>
                </div>
            </li>
        {% endif %}
    </ul>
    <ul class="attributes attributes-right">
        {% for designer in rocking_chair.designers.all() %}
            <li>
                <div class="attribute">
                    <div class="attribute-value">
                        {{ designer.first_name }} {{ designer.last_name }}
                    </div>
                    <div class="attribute-name">
                        Designer
                    </div>
                </div>
                {{ include_links(rocking_chair.designer_links.filter(designer=designer)) }}
            </li>
        {% endfor %}
        {% for manufacturer in rocking_chair.manufacturers.all() %}
            <li>
                <div class="attribute">
                    <div class="attribute-value">
                        {{ manufacturer.name }}
                    </div>
                    <div class="attribute-name">
                        Manufacturer
                    </div>
                </div>
                {{ include_links(rocking_chair.manufacturer_links.filter(manufacturer=manufacturer)) }}
            </li>
        {% endfor %}
        {% if rocking_chair.price %}
            <li>
                <div class="attribute">
                    <div class="attribute-value">
                        {{ rocking_chair.price.amount | round(0) }} {{ rocking_chair.price.currency.code }}
                    </div>
                    <div class="attribute-name">
                        Price
                    </div>
                </div>
                {{ include_links(rocking_chair.price_links.all()) }}
            </li>
        {% endif %}
    </ul>
</article>